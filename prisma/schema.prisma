generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id      String   @id @default(uuid())
  username  String  @unique
  passwordHash  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  exercises Exercise[]
}

model Exercise {
  id      String   @id @default(uuid())
  userId  String
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  title   String
  body    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}